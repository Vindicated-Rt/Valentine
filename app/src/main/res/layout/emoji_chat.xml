<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/emoji_me_ic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/me_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/emoji_chat_m_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/chat_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/emoji_me_ic_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/emoji_s_1_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/emoji_chat_m_iv"
        app:layout_constraintEnd_toStartOf="@+id/emoji_me_ic_iv"
        app:layout_constraintTop_toTopOf="@+id/emoji_chat_m_iv"
        android:layout_marginRight="32dp" />

    <ImageView
        android:id="@+id/emoji_s_2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/emoji_chat_m_iv"
        app:layout_constraintEnd_toStartOf="@+id/emoji_s_1_iv"
        app:layout_constraintTop_toTopOf="@+id/emoji_chat_m_iv"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/emoji_s_3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/emoji_chat_m_iv"
        app:layout_constraintEnd_toStartOf="@+id/emoji_s_2_iv"
        app:layout_constraintTop_toTopOf="@+id/emoji_chat_m_iv"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/emoji_she_ic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@mipmap/she_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/emoji_chat_f_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@mipmap/chat_f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/emoji_she_ic_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/emoji_s_4_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/emoji_chat_f_iv"
        app:layout_constraintStart_toEndOf="@+id/emoji_she_ic_iv"
        app:layout_constraintTop_toTopOf="@+id/emoji_chat_f_iv"
        android:layout_marginLeft="32dp" />

    <ImageView
        android:id="@+id/emoji_s_5_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/emoji_chat_f_iv"
        app:layout_constraintStart_toEndOf="@+id/emoji_s_4_iv"
        app:layout_constraintTop_toTopOf="@+id/emoji_chat_f_iv"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/emoji_s_6_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/emoji_chat_f_iv"
        app:layout_constraintStart_toEndOf="@+id/emoji_s_5_iv"
        app:layout_constraintTop_toTopOf="@+id/emoji_chat_f_iv"
        android:layout_marginLeft="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>